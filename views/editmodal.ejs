<%- include('./partilas/head') %>
    </head>

    <body style="background-color: #f8f9fa; font-family: 'Inter', sans-serif;">
        <%- include('./partilas/nav') %>

            <div class="container py-5">
                <% if (error) { %>
                    <script>
                        alert("<%= error %>");
                        window.location.href = '/host/crud'
                    </script>
                    <% } %>
                        <div class="row justify-content-center">
                            <div class="col-md-8 col-lg-6">
                                <div class="card shadow-sm border-0">
                                    <div class="card-body p-4">
                                        <h3 class="mb-4 text-center fw-bold text-success">Edit Employee Details</h3>
                                        <form action="/host/edit" method="POST">
                                            <div class="mb-3">
                                                <label for="empName" class="form-label">Full Name</label>
                                                <input type="text" id="empName" class="form-control" name="name"
                                                    value="<%= f.name %>" required>
                                            </div>

                                            <div class="mb-3">
                                                <label for="empEmail" class="form-label">Email</label>
                                                <input type="email" id="empEmail" class="form-control" name="email"
                                                    value="<%= f.email %>" required>
                                            </div>

                                            <div class="mb-3">
                                                <label for="empPhone" class="form-label">Phone Number</label>
                                                <input type="tel" id="empPhone" class="form-control" name="mobile"
                                                    value="<%= f.mobile %>" required>
                                            </div>

                                            <div class="mb-3">
                                                <label for="empDept" class="form-label">Department</label>
                                                <input type="text" id="empDept" class="form-control" name="department"
                                                    value="<%= f.department %>" required>
                                            </div>

                                            <div class="mb-3">
                                                <label for="empRole" class="form-label">Role</label>
                                                <input type="text" id="empRole" class="form-control" name="role"
                                                    value="<%= f.role %>" required>
                                            </div>

                                            <div class="mb-3">
                                                <label for="empJoinDate" class="form-label">Joining Date</label>
                                                <input type="date" id="empJoinDate" class="form-control" name="Joining"
                                                    value="<%= f.Joining %>" required>
                                            </div>

                                            <input type="hidden" name="eid" value="<%= f._id %>">

                                            <div class="d-flex justify-content-between mt-4">
                                                <button type="submit" class="btn btn-success w-50 me-2">Update</button>
                                                <a href="/host/crud" class="btn btn-secondary w-50 ms-2">Return</a>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
            </div>
            <%- include('./partilas/f') %>
                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    </body>

    </html>