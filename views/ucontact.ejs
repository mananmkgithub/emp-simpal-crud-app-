<%- include('./partilas/head') %>
    </head>
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f8f9fa;
        }

        .form-control:focus {
            border-color: #198754;
            box-shadow: 0 0 0 0.15rem rgba(25, 135, 84, 0.25);
        }

        .btn-success:hover {
            background-color: #157347;
        }

        @media (max-width: 576px) {
            h3 {
                font-size: 22px;
            }

            .btn {
                width: 100%;
            }
        }
    </style>

    <body style="background-color: #f8f9fa; font-family: 'Inter', sans-serif;">
        <%- include('./partilas/nav') %>

            <div class="container py-5">
                <div class="row justify-content-center">
                    <div class="col-md-10 col-lg-8">
                        <div class="card shadow-sm border-0">
                            <div class="card-body p-5">
                                <h3 class="text-center text-success fw-bold mb-4">Let's Talk</h3>
                                <form action="/host/contact" method="POST" id="contactForm" name="contactForm">
                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <label for="name" class="form-label">Name</label>
                                            <input type="text" class="form-control" name="name" id="name"
                                                placeholder="Your name" required>
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            <label for="email" class="form-label">Email</label>
                                            <input type="email" class="form-control" name="email" id="email"
                                                placeholder="Your email" required>
                                        </div>
                                    </div>

                                    <div class="mb-3">
                                        <label for="subject" class="form-label">Subject</label>
                                        <input type="text" class="form-control" name="subject" id="subject"
                                            placeholder="Your subject" required>
                                    </div>

                                    <div class="mb-4">
                                        <label for="message" class="form-label">Message</label>
                                        <textarea class="form-control" name="message" id="message" rows="4"
                                            placeholder="Write your message..." required></textarea>
                                    </div>

                                    <div class="text-center">
                                        <button type="submit" class="btn btn-success px-5 py-2">Send Message</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <%- include('./partilas/f') %>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    </body>

    </html>