<%- include('./partilas/head') %>
<style>
  body {
    font-family: 'Inter', sans-serif;
    background-color: #f8f9fa;
  }

  .table th,
  .table td {
    vertical-align: middle;
    text-align: center;
  }

  .table thead {
    background: linear-gradient(90deg, #0f2027, #203a43, #2c5364);
    color: white;
  }

  .btn-gradient {
    background: linear-gradient(90deg, #0f2027, #203a43, #2c5364);
    color: white;
    border: none;
    padding: 8px 18px;
    font-weight: 600;
    border-radius: 5px;
    transition: all 0.3s ease;
  }

  .btn-gradient:hover {
    background: linear-gradient(90deg, #1c313e, #3b4a58, #445e77);
    transform: scale(1.02);
  }

  .btn-sm {
    padding: 5px 10px;
  }

  @media (max-width: 576px) {
    h3 {
      font-size: 20px;
    }

    .btn {
      font-size: 13px;
      padding: 6px 12px;
    }

    .table th,
    .table td {
      font-size: 13px;
      padding: 6px;
    }
  }
</style>
</head>

<body>
  <%- include('./partilas/nav') %>

  <div class="container py-5">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4">
      <h3 class="fw-bold text-success">Employee Records</h3>
      <button class="btn btn-gradient mt-3 mt-md-0" data-bs-toggle="modal" data-bs-target="#employeeModal">
        + Add Employee
      </button>
    </div>
    <div class="table-responsive shadow-sm bg-white rounded">
      <table class="table table-bordered table-hover align-middle text-nowrap">
        <% if (e) { %>
          <thead>
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th>Phone</th>
              <th>Department</th>
              <th>Role</th>
              <th>Joining Date</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody id="employeeTable">
              <tr>
                <td><%= v.name %></td>
                <td><%= v.email %></td>
                <td><%= v.mobile %></td>
                <td><%= v.department %></td>
                <td><%= v.role %></td>
                <td><%= v.Joining %></td>
                <td>
                  <a href="/host/edit/<%= v._id %>" class="btn btn-sm btn-success me-1">Edit</a>
                  <a href="/host/delete/<%= v._id %>" onclick="return confirm('Are you sure you want to delete?')"
                    class="btn btn-sm btn-danger">Delete</a>
                </td>
              </tr>
          </tbody>
        <% } else { %>
          <tbody>
            <tr>
              <td colspan="7" class="text-center py-4 text-muted">
                <h5>No employee records found.</h5>
              </td>
            </tr>
          </tbody>
        <% } %>
      </table>
    </div>
  </div>

  <%- include('./partilas/addmodal') %>
  <%- include('./partilas/f') %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
