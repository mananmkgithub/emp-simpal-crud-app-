<%- include('./partilas/head') %>
  <style>
    body {
      font-family: 'Inter', sans-serif;
    }

    .table td,
    .table th {
      vertical-align: middle;
    }

    .btn-outline-success:hover {
      background-color: #198754;
      color: white;
    }

    .btn-outline-danger:hover {
      background-color: #dc3545;
      color: white;
    }

    @media (max-width: 576px) {
      h3 {
        font-size: 20px;
      }

      .btn {
        font-size: 13px;
        padding: 6px 10px;
      }
    }
  </style>

  </head>

  <body style="background-color: #f8f9fa; font-family: 'Inter', sans-serif;">
    <%- include('./partilas/nav') %>

      <div class="container py-5">
        <div
          class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4">
          <h3 class="fw-bold text-success">Employee Records</h3>
          <button class="btn btn-primary mt-3 mt-md-0" data-bs-toggle="modal" data-bs-target="#employeeModal">
            + Add Employee
          </button>
        </div>

        <div class="table-responsive shadow-sm bg-white rounded">
          <table class="table table-bordered table-hover align-middle text-nowrap">
            <tbody id="employeeTable">
              <% if(e) { %>
                <thead class="table-success">
                  <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Department</th>
                    <th>Role</th>
                    <th>Joining Date</th>
                    <th style="width: 150px;">Actions</th>
                  </tr>
                </thead>
            <tbody id="employeeTable">
              <tr>
                <td>
                  <%= v.name %>
                </td>
                <td>
                  <%= v.email %>
                </td>
                <td>
                  <%= v.mobile %>
                </td>
                <td>
                  <%= v.department %>
                </td>
                <td>
                  <%= v.role %>
                </td>
                <td>
                  <%= v.Joining %>
                </td>
                <td>
                  <a href="/host/edit/<%= v._id %>"><button class="btn btn-sm btn-success me-1">Edit</button></a>
                  <a href="/host/delete/<%= v._id %>"><button class="btn btn-sm btn-danger"
                      onclick="return confirm('you want to delete')">Delete</button></a>
                </td>
              </tr>
              <% } else {%>
                <h2 align="center">Not Find Record</h2>
                <% } %>
            </tbody>
          </table>
        </div>
      </div>

      <%- include('./partilas/addmodal') %>
        <%- include('./partilas/f') %>

          <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>

  </html>