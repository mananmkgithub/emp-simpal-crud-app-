<%- include('./partilas/head') %>
  <style>
    body {
      font-family: 'Inter', sans-serif;
      background-color: #f8f9fa;
    }

    table th,
    table td {
      vertical-align: middle !important;
      font-size: 15px;
    }

    .table-responsive {
      overflow-x: auto;
      -webkit-overflow-scrolling: touch;
    }

    @media (max-width: 576px) {

      table th,
      table td {
        font-size: 13px;
        padding: 6px;
      }

      h3 {
        font-size: 20px;
      }
    }
  </style>

  </head>

  <body style="background-color: #f8f9fa; font-family: 'Inter', sans-serif;">
    <%- include('./partilas/nav') %>
      <div class="container py-5">
        <% if (error) { %>
          <script>
            alert("<%= error %>");
            window.location.href = '/host/crud'
          </script>
          <% } %>
            <h3 class="fw-bold text-success mb-4 text-center">All Employee Records</h3>
            <!-- Responsive Table -->
            <div class="table-responsive shadow-sm rounded bg-white p-3">
              <table class="table table-hover table-bordered align-middle text-nowrap">
                <thead class="table-success text-center">
                  <tr>
                    <th>Sno.</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Department</th>
                    <th>Role</th>
                    <th>Joining Date</th>
                  </tr>
                </thead>
                <tbody id="employeeTable">
                  <input type="hidden" value="<% a = 1 %>">
                  <% data.forEach(v=> { %>
                    <tr class="text-center">
                      <td>
                        <%= a %>
                      </td>
                      <td>
                        <%= v.name %>
                      </td>
                      <td>
                        <%= v.email %>
                      </td>
                      <td>
                        <%= v.mobile %>
                      </td>
                      <td>
                        <%= v.department %>
                      </td>
                      <td>
                        <%= v.role %>
                      </td>
                      <td>
                        <%= v.Joining %>
                      </td>
                      <input type="hidden" value="<% a++ %>">
                    </tr>
                    <% }) %>
                </tbody>
              </table>
            </div>
      </div>
      <%- include('./partilas/f') %>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
  </html>