<%- include('./partilas/head') %>

<style>
  body {
    font-family: 'Inter', sans-serif;
    background-color: #f8f9fa;
  }
  .pagination{
      margin-top:2rem;
      text-align: center;
  }
  .pagination a{
    text-decoration: none;
    color:green;
    padding: 0.5rem;
    border: 1px solid green;
    margin: 0 1rem;
  }
  .table th,
  .table td {
    vertical-align: middle !important;
  }

  .table thead {
    background: linear-gradient(90deg, #0f2027, #203a43, #2c5364); /* Matches navbar */
    color: #fff;
  }

  .table th {
    text-align: center;
    font-weight: 600;
    font-size: 15px;
    letter-spacing: 0.5px;
  }

  .table td {
    font-size: 14px;
    text-align: center;
  }

  .btn-icon {
    background: transparent;
    border: none;
    padding: 6px;
    font-size: 1.2rem;
    color: #495057;
    transition: all 0.2s ease-in-out;
  }

  .btn-icon:hover {
    transform: scale(1.1);
  }

  .btn-icon.edit i {
    color: #198754;
  }

  .btn-icon.edit:hover i {
    color: #146c43;
  }

  .btn-icon.delete i {
    color: #dc3545;
  }

  .btn-icon.delete:hover i {
    color: #b02a37;
  }

  .btn-gradient {
    background: linear-gradient(90deg, #0f2027, #203a43, #2c5364);
    color: white;
    border: none;
    transition: all 0.3s ease;
    padding: 8px 18px;
    font-weight: 600;
    border-radius: 6px;
  }

  .btn-gradient:hover {
    background: linear-gradient(90deg, #1c313e, #3b4a58, #445e77);
    transform: scale(1.02);
  }

  @media (max-width: 768px) {
    .table th,
    .table td {
      font-size: 13px;
      padding: 8px;
    }

    .btn-gradient {
      width: 100%;
      margin-top: 10px;
    }

    .btn-icon {
      font-size: 1.4rem;
    }
  }
</style>
</head>
<body>
  <%- include('./partilas/nav') %>

  <% if (error) { %>
    <script>
      alert("<%= error %>");
      window.location.href = '/host'
    </script>
  <% } %>
  <div class="container mt-5">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4">
      <h3 class="fw-bold text-success">Employee Records</h3>
      <button class="btn btn-gradient mt-3 mt-md-0" data-bs-toggle="modal" data-bs-target="#employeeModal">
        + Add Employee
      </button>
    </div>
    <!-- Table -->
    <div class="table-responsive shadow-sm rounded">
      <table class="table table-bordered table-hover align-middle bg-white">
        <thead>
          <tr>
            <th>Sno.</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Department</th>
            <th>Role</th>
            <th>Joining Date</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody id="employeeTable">
          <input type="hidden" value="<% a=1 %>">
          <% data.forEach(v => { %>
            <tr>
              <td><%= a %></td>
              <td><%= v.name %></td>
              <td><%= v.email %></td>
              <td><%= v.mobile %></td>
              <td><%= v.department %></td>
              <td><%= v.role %></td>
              <td><%= v.Joining %></td>
              <td>
                <div class="d-flex justify-content-center gap-2">
                  <a href="/host/edit/<%= v._id %>" class="btn-icon edit" title="Edit">
                    <i class="bi bi-pencil-square"></i>
                  </a>
                  <a href="/host/delete/<%= v._id %>" onclick="return confirm('Are you sure you want to delete this record?')" class="btn-icon delete" title="Delete">
                    <i class="bi bi-trash-fill"></i>
                  </a>
                </div>
              </td>
              <input type="hidden" value="<% a++ %>">
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
  <%- include('./partilas/addmodal') %>
  <%- include('./partilas/f') %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
