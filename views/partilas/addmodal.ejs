<div class="modal fade" id="employeeModal" tabindex="-1" aria-labelledby="modalTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <form action="/host/crud" class="modal-content" id="employeeForm" method="POST">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title fw-semibold" id="modalTitle">Add Employee</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                    aria-label="Close"></button>
            </div>
            <div class="modal-body px-4 py-3">
                <div class="row g-3">
                    <input type="hidden" id="editIndex" />

                    <div class="col-md-6">
                        <label for="empName" class="form-label">Full Name</label>
                        <input type="text" id="empName" name="name" class="form-control" placeholder="Enter full name"
                            required>
                    </div>

                    <div class="col-md-6">
                        <label for="empEmail" class="form-label">Email</label>
                        <input type="email" id="empEmail" name="email" class="form-control"
                            placeholder="example@mail.com" required>
                    </div>

                    <div class="col-md-6">
                        <label for="empPhone" class="form-label">Phone Number</label>
                        <input type="tel" id="empPhone" name="mobile" class="form-control" placeholder="e.g. 9876543210"
                            required>
                    </div>

                    <div class="col-md-6">
                        <label for="empDept" class="form-label">Department</label>
                        <input type="text" id="empDept" name="department" class="form-control" placeholder="e.g. HR, IT"
                            required>
                    </div>

                    <div class="col-md-6">
                        <label for="empRole" class="form-label">Role</label>
                        <input type="text" id="empRole" name="role" class="form-control" placeholder="e.g. Manager"
                            required>
                    </div>

                    <div class="col-md-6">
                        <label for="empJoinDate" class="form-label">Joining Date</label>
                        <input type="date" id="empJoinDate" name="Joining" class="form-control" required>
                    </div>
                </div>
            </div>

            <div class="modal-footer px-4 py-3">
                <button type="submit" class="btn btn-success px-4">Save</button>
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
            </div>
        </form>
    </div>
</div>