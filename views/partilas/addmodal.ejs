<div class="modal fade" id="employeeModal" tabindex="-1" aria-labelledby="modalTitle" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <form action="/host/crud" class="modal-content" id="employeeForm" method="POST" style="border-radius: 10px;">
      <!-- Modal Header -->
      <div class="modal-header text-white" style="background: linear-gradient(90deg, #0f2027, #203a43, #2c5364);">
        <h5 class="modal-title fw-semibold" id="modalTitle">Add Employee</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <!-- Modal Body -->
      <div class="modal-body px-4 py-3">
        <div class="row g-3">
          <input type="hidden" id="editIndex" />

          <div class="col-md-6">
            <label for="empName" class="form-label fw-medium">Full Name</label>
            <input type="text" id="empName" name="name" class="form-control" placeholder="Enter full name" required>
          </div>

          <div class="col-md-6">
            <label for="empEmail" class="form-label fw-medium">Email</label>
            <input type="email" id="empEmail" name="email" class="form-control" placeholder="example@mail.com" required>
          </div>

          <div class="col-md-6">
            <label for="empPhone" class="form-label fw-medium">Phone Number</label>
            <input type="tel" id="empPhone" name="mobile" class="form-control" placeholder="e.g. 9876543210" required>
          </div>

          <div class="col-md-6">
            <label for="empDept" class="form-label fw-medium">Department</label>
            <input type="text" id="empDept" name="department" class="form-control" placeholder="e.g. HR, IT" required>
          </div>

          <div class="col-md-6">
            <label for="empRole" class="form-label fw-medium">Role</label>
            <input type="text" id="empRole" name="role" class="form-control" placeholder="e.g. Manager" required>
          </div>

          <div class="col-md-6">
            <label for="empJoinDate" class="form-label fw-medium">Joining Date</label>
            <input type="date" id="empJoinDate" name="Joining" class="form-control" required>
          </div>
        </div>
      </div>

      <!-- Modal Footer -->
      <div class="modal-footer px-4 py-3">
        <button type="submit" class="btn btn-gradient mt-3 mt-md-0">Save</button>
        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
      </div>
    </form>
  </div>
</div>
